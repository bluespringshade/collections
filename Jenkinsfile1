node{
    stage("Run Automation"){
        git 'https://github.com/bluespringshade/collections.git'
        sh 'npm install'
        echo "Start running newman, please wait..."
        try{
            sh 'npm run show-fact'
            sh 'npm run show-all-facts'
            currentBuild.result = 'SUCCESS'
            echo "Run Newman Success"
        }catch(Exception ex){
            currentBuild.result = 'FAILURE'
        }
    }
}
